[Unit]
Description={{ job.name }} - initial setup
Before=ansible-pull.service
ConditionFirstBoot=yes

[Service]
Type=oneshot
ExecStartPre=-/bin/plymouth display-message --text="{{ ansible_pull_initial_plymouth_messsage }}"
ExecStart=/bin/bash -c '{{ job.job | regex_replace("\'", "\\'") }}'
ExecStop=-/bin/plymouth hide-message --text="{{ ansible_pull_initial_plymouth_messsage }}"

[Install]
WantedBy=first-boot-complete.target